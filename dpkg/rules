#!/usr/bin/make -f
# debian/rules that uses debhelper >= 7.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS


%:
	dh  $@

install_libodraw:
	# Set up libodraw package directories and files
	mkdir -p debian/libodraw/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so.*.*.* debian/libodraw/usr/lib

install_libodraw_dev:
	# Set up libodraw-dev package directories and files
	mkdir -p debian/libodraw-dev/usr/include
	mkdir -p debian/libodraw-dev/usr/include/libodraw
	mkdir -p debian/libodraw-dev/usr/lib
	mkdir -p debian/libodraw-dev/usr/lib/pkgconfig
	mkdir -p debian/libodraw-dev/usr/share/man/man3
	install -p -m755 debian/tmp/usr/include/*.h debian/libodraw-dev/usr/include
	install -p -m755 debian/tmp/usr/include/libodraw/*.h debian/libodraw-dev/usr/include/libodraw
	install -p -m755 debian/tmp/usr/lib/*.la debian/libodraw-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.a debian/libodraw-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so debian/libodraw-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/pkgconfig/* debian/libodraw-dev/usr/lib/pkgconfig
	install -p -m755 debian/tmp/usr/share/man/man3/* debian/libodraw-dev/usr/share/man/man3

install_libodraw_tools:
	# Set up libodraw-tools package directories and files
	mkdir -p debian/libodraw-tools/usr/bin
	mkdir -p debian/libodraw-tools/usr/share/man/man1
	install -p -m755 debian/tmp/usr/bin/* debian/libodraw-tools/usr/bin
	install -p -m755 debian/tmp/usr/share/man/man1/* debian/libodraw-tools/usr/share/man/man1

override_dh_auto_test:

override_dh_installinit: install_libodraw install_libodraw_dev install_libodraw_tools

override_dh_installmenu:

override_dh_installmime:

override_dh_installmodules:

override_dh_installlogcheck:

override_dh_installlogrotate:

override_dh_installpam:

override_dh_installppp:

override_dh_installudev:

override_dh_installwm:

override_dh_installxfonts:

override_dh_gconf:

override_dh_icons:

override_dh_perl:

override_dh_pysupport:

override_dh_shlibdeps:
	dh_shlibdeps -Llibodraw -l${PWD}/debian/tmp/usr/lib

override_dh_makeshlibs:
	dh_makeshlibs -Xlibodraw-dev

